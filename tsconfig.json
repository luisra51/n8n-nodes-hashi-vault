{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"sourceMap": false,
		"allowJs": true
	},
	"include": ["credentials/**/*", "nodes/**/*", "index.ts"],
	"exclude": ["node_modules", "dist", "tests"]
}
